    script(src='//cdn.jsdelivr.net/jquery/2.1.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/js/client.js')

  body
    div.container
        div.row
            div.col-md-8
                h1.page-header
                    | Batman vs. Superman

    div#score
