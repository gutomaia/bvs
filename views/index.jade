html(lang='en')
  head
    meta(charset='utf-8')
    title Batman vs. Superman Opnions
    meta(name='viewport', content='initial-scale=1.0, width=device-width, \
     height=device-height, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.6/css/bootstrap.min.css.map')
